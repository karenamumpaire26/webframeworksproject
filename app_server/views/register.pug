extends layout

block content
  .row.justify-content-center
    .col-md-8
      .card.p-4.shadow
        h2.text-center.mb-4 StudentInc Registration

        form(action='/submit', method='POST')

          .row
            .col-md-6.mb-3
              label.form-label(for='tNumber') T Number
              input.form-control(type='text', name='tNumber', pattern='T[0-9]{8}', required)

            .col-md-6.mb-3
              label.form-label(for='fullName') Full Name
              input.form-control(type='text', name='fullName', required)

          .mb-3
            label.form-label(for='address') Address
            input.form-control(type='text', name='address', required)

          .row
            .col-md-6.mb-3
              label.form-label(for='phone') Phone Number
              input.form-control(type='text', name='phone', required)

            .col-md-6.mb-3
              label.form-label(for='email') Email Address
              input.form-control(type='email', name='email', required)

          button.btn.btn-success.w-100(type='submit') Submit Registration

        p.text-center.mt-3
          | Already registered?
          a(href='/login') Login here
