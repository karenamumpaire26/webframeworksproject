extends layout

block content
  .row.banner
    .col-12
      h1= building.name

  .row
    .col-12.col-lg-9

      p.address= building.address

      .card.card-primary
        .card-block
          h2.card-title Description
          p= building.description

      .card.card-primary
        .card-block
          h2.card-title Facilities
          each fac in building.facilities
            span.badge.badge-warning= fac

      .card.card-primary
        .card-block
          h2.card-title Opening Hours
          each hour in building.openingHours
            p.card-text= hour

    .col-12.col-lg-3
      p.lead Explore MTU and learn more about campus services.
