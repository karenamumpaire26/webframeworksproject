extends layout

block content
  .row.banner
    .col-12
      h1= pageHeader.title
      small &nbsp;#{pageHeader.strapline}

  .row
    .col-12.col-md-8
      each building in buildings
        .card
          .card-block
            h4
              a(href="/building/" + building.name)= building.name
              small &nbsp;
              // Star rating (we will add mixin later)
              span.badge.badge-pill.badge-default.float-right= building.distance
            p.address= building.address
            .facilities
              each fac in building.facilities
                span.badge.badge-warning= fac

    .col-12.col-md-4
      p.lead StudentInc helps MTU students find essential campus facilities easily.
